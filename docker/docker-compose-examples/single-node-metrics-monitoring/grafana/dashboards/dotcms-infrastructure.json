    {
      "id": 2,
      "title": "Disk Usage %",
      "type": "gauge",
      "gridPos": {"h": 8, "w": 8, "x": 0, "y": 4},
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "auto",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          },
          "color": {"mode": "thresholds"},
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      },
      "targets": [
        {
          "expr": "((disk_total_bytes{host=~\"$host\", deployment=~\"$deployment\", env=~\"$env\"} - disk_free_bytes{host=~\"$host\", deployment=~\"$deployment\", env=~\"$env\"}) / disk_total_bytes{host=~\"$host\", deployment=~\"$deployment\", env=~\"$env\"}) * 100",
          "legendFormat": "",
          "refId": "A"
        }
      ],
      "datasource": {"type": "prometheus", "uid": "prometheus"}
    },
