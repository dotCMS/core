{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "module": "es2020",
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@react/*": ["src/react/*"],
      "@react/shared/*": ["src/react/shared/*"],
      "@react/hooks/*": ["src/hooks/*"],
      "@react/contentTypes/*": ["src/components/content-types/*"],
      "@react/layout/*": ["src/react/layout/*"],
      "@components/*": ["src/components/*"],
      "@styles/*": ["src/styles/*"]
    }
  }
}
