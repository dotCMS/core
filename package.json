{
    "name": "dotcms-ui",
    "version": "5.0.1",
    "license": "MIT",
    "scripts": {
        "ng": "ng",
        "build:dev": "ng build --configuration=development",
        "build:prod": "ng build --configuration=production --prod dotcms-ui",
        "watch": "npm run build -w --no-delete-output-path --sourcemap",
        "lint": "ng lint",
        "e2e": "ng e2e",
        "createpackagejson": "node -e \"var data = require('./dist/package.json');var fs = require('fs');data.version = data.version + \"-\" + new Date().getTime();var {scripts, dependencies, devDependencies, ...res} = data;fs.writeFileSync('./dist/package.json', JSON.stringify(res, null, 4));\"",
        "publish:dev": "rm -rf dist;npm run build:prod;cp package.json ./dist/package.json;npm run createpackagejson;cd dist"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dotCMS/core-web.git"
    },
    "private": false,
    "dependencies": {
        "@angular/platform-server": "^6.1.2",
        "@ctrl/tinycolor": "^2.0.0",
        "angular2-hotkeys": "^2.1.2",
        "angular2-tinymce": "^2.1.2",
        "core-js": "^2.5.3",
        "dotcms-js": "^4.2.0-b99",
        "dotcms-rules-engine": "0.0.12",
        "font-awesome": "^4.7.0",
        "lodash": "^4.17.11",
        "md5": "^2.2.1",
        "moment": "^2.19.4",
        "ng2-ace-editor": "^0.3.8",
        "ng2-dragula": "^2.1.0",
        "primeicons": "^1.0.0-beta.10",
        "primeng": "^6.1.4",
        "zone.js": "^0.8.26"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.7.0",
        "@angular-devkit/build-ng-packagr": "~0.7.0",
        "@angular/animations": "^6.1.2",
        "@angular/cli": "^6.1.2",
        "@angular/common": "^6.1.2",
        "@angular/compiler": "^6.1.2",
        "@angular/compiler-cli": "^6.1.2",
        "@angular/core": "^6.1.2",
        "@angular/forms": "^6.1.2",
        "@angular/http": "^6.1.2",
        "@angular/language-service": "^6.1.2",
        "@angular/platform-browser": "^6.1.2",
        "@angular/platform-browser-dynamic": "^6.1.2",
        "@angular/router": "^6.1.2",
        "@types/googlemaps": "^3.30.1",
        "@types/jasmine": "~2.5.53",
        "@types/jasminewd2": "~2.0.2",
        "@types/node": "^6.0.85",
        "@types/uglify-js": "^2.6.28",
        "codelyzer": "~4.2.1",
        "jasmine-core": "~2.6.2",
        "jasmine-spec-reporter": "~4.1.0",
        "karma": "~1.7.0",
        "karma-chrome-launcher": "~2.1.1",
        "karma-cli": "~1.0.1",
        "karma-coverage-istanbul-reporter": "^1.2.1",
        "karma-jasmine": "~1.1.0",
        "karma-jasmine-html-reporter": "^0.2.2",
        "ng-cli": "^0.7.0",
        "ng-packagr": "^3.0.0",
        "node-sass": "^4.9.0",
        "protractor": "~5.1.2",
        "rxjs": "^6.2.2",
        "ts-node": "~3.3.0",
