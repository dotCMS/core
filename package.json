{
    "name": "dotcms-ui",
    "version": "5.1.1",
    "license": "MIT",
    "scripts": {
        "ng": "ng",
        "build:dev": "ng build --configuration=development",
        "build:prod": "ng build --configuration=production --prod dotcms-ui",
        "build:libs": "ng build dotcms-js; ng build dot-rules; ng build dot-layout-grid",
        "watch": "npm run build -w --no-delete-output-path --sourcemap",
        "lint": "ng lint",
        "e2e": "ng e2e",
        "test": "ng test",
        "createpackagejson": "node -e \"var data = require('./dist/package.json');var fs = require('fs');data.version = data.version + \"-\" + new Date().getTime();var {scripts, dependencies, devDependencies, ...res} = data;fs.writeFileSync('./dist/package.json', JSON.stringify(res, null, 4));\"",
        "publish:dev": "rm -rf dist;npm run build:prod;cp package.json ./dist/package.json;npm run createpackagejson;cd dist;npm publish",
        "publish:doc:docms": "typedoc projects/dotcms/src/lib/ --options projects/dotcms/typedoc.json; gh-pages --dist ./dist-docs/dotcms --dest ./docs/dotcms",
        "dot-custom-elements": "cd ./projects/dot-custom-elements && npm run start",
        "docker:test": "npn run docker:build;docker run --rm core-web npm test -- dotcms-ui --watch=false",
        "docker:build": "docker build -t core-web ."
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dotCMS/core-web.git"
    },
    "private": false,
    "dependencies": {
        "@angular/animations": "~7.2.0",
        "@angular/cdk": "~7.2.0",
        "@angular/common": "~7.2.0",
        "@angular/compiler": "~7.2.0",
        "@angular/core": "~7.2.0",
        "@angular/forms": "~7.2.0",
        "@angular/http": "~7.2.0",
        "@angular/platform-browser": "~7.2.0",
        "@angular/platform-browser-dynamic": "~7.2.0",
        "@angular/router": "~7.2.0",
        "@ctrl/tinycolor": "^2.0.0",
        "angular2-hotkeys": "^2.1.2",
        "angular2-tinymce": "^2.1.2",
        "core-js": "^2.5.4",
        "font-awesome": "^4.7.0",
        "lodash": "^4.17.11",
        "md5": "^2.2.1",
        "moment": "^2.19.4",
        "ng2-ace-editor": "^0.3.8",
        "ng2-dragula": "^2.1.0",
        "npm": "^6.9.0",
        "primeicons": "^1.0.0",
        "primeng": "^7.0.3",
        "rxjs": "~6.3.3",
        "test": "^0.6.0",
        "tslib": "^1.9.0",
        "zone.js": "~0.8.26"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.11.4",
        "@angular-devkit/build-ng-packagr": "~0.11.4",
        "@angular/cli": "~7.1.4",
        "@angular/compiler-cli": "~7.2.0",
        "@angular/language-service": "~7.2.0",
        "@types/googlemaps": "^3.30.1",
        "@types/jasmine": "~2.8.8",
        "@types/jasminewd2": "~2.0.3",
        "codelyzer": "~4.5.0",
        "gh-pages": "^2.0.1",
        "jasmine-core": "~2.99.1",
        "jasmine-spec-reporter": "~4.2.1",
        "karma": "~3.1.1",
        "karma-chrome-launcher": "~2.2.0",
        "karma-coverage-istanbul-reporter": "^2.0.1",
        "karma-jasmine": "~1.1.2",
        "karma-jasmine-html-reporter": "^0.2.2",
        "ng-packagr": "^4.4.5",
        "protractor": "~5.4.0",
        "ts-node": "~7.0.0",
        "tsickle": ">=0.31.0",
        "tslint": "~5.11.0",
        "tslint-angular": "^1.1.1",
        "typescript": "~3.1.6"
    }
}
