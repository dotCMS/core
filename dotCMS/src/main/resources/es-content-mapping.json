{
    "content": {
        "date_detection": false,
        "_source": {
            "excludes": [
                "metadata.*"
            ]
        },
        "dynamic_templates": [
            {
                "template_1": {
                    "_all": {
                        "indexAnalyzer": "whitespace",
                        "searchAnalyzer": "whitespace",
                        "store": "false",
                        "type": "string"
                    },
                    "match": "*_dotraw",
                    "mapping": {
                        "type": "string",
                        "index": "not_analyzed",
                        "ignore_above": 8191
                    }
                }
            },
            {
                "geomapping": {
                    "match": "*latlon",
                    "mapping": {
                        "type": "geo_point"
                    }
                }
            },
            {
                "geomapping_2": {
                    "match": "*latlong",
                    "mapping": {
                        "type": "geo_point"
                    }
                }
            },
            {
            	"tags" : {
		            "match": "tags",
		            "mapping": {
		                "type": "string",
		                "analyzer": "dot_comma_analyzer"	
					}
	            }
            }
        ]
    }
}
