{
    "content": {
        "date_detection": true,
        "_source": {
            "excludes": [
                "metadata.*"
            ]
        },
        "dynamic_date_formats": [
            "MMM d, yyyy hh:mm:ss aaa"
        ],
        "dynamic_templates": [
            {
                "template_1": {
                    "match": "*_dotraw",
                    "mapping": {
                        "type":  "keyword",
                        "ignore_above": 8191
                    }
                }
            },
            {
                "textmapping": {
                    "match": "*_text",
                    "mapping": {
                        "type": "text"
                    }
                }
            },
            {
                "ordermapping": {
                    "match": "*-order",
                    "mapping": {
                        "type": "keyword"
                    }
                }
            },
            {
                "datemapping": {
                    "mapping": {
                        "ignore_malformed": true
                    },
                    "match_mapping_type": "date"
                }
            },
            {
                "geomapping": {
                    "match": "*latlon",
                    "mapping": {
                        "type": "geo_point",
                        "doc_values": true 
                    }
                }
            },
            {
                "geomapping_2": {
                    "match": "*latlong",
                    "mapping": {
                        "type": "geo_point",
                        "doc_values": true 
                    }
                }
            },
            {
            	"tags" : {
		            "match": "tags",
		            "mapping": {
		                "type": "keyword",
		                "analyzer": "dot_comma_analyzer",
		                "doc_values": false 	
					}
	            }
            },
            {
                "textmapping": {
                    "match_mapping_type": "string",
                    "mapping": {
                        "analyzer": "whitespace",
                        "search_analyzer": "whitespace",
                        "store": "false",
                        "type": "text"
                    }
                }
            }
        ]
    }
}
