{
    "content": {
        "date_detection": false,
        "_source": {
            "excludes": [
                "metadata.*"
            ]
        },
        "dynamic_templates": [
            {
                "template_1": {
                    "match": "*_dotraw",
                    "mapping": {
                        "type":  "keyword",
                        "ignore_above": 8191,
                        "fields": {
                            "_all": {
                                "type": "text",
                                "analyzer": "whitespace",
                                "search_analyzer": "whitespace",
                                "store": "false"
                            }
                        }
                    }
                }
            },
            {
                "geomapping": {
                    "match": "*latlon",
                    "mapping": {
                        "type": "geo_point",
                        "doc_values": true 
                    }
                }
            },
            {
                "geomapping_2": {
                    "match": "*latlong",
                    "mapping": {
                        "type": "geo_point",
                        "doc_values": true 
                    }
                }
            },
            {
            	"tags" : {
		            "match": "tags",
		            "mapping": {
		                "type": "keyword",
		                "analyzer": "dot_comma_analyzer",
		                "doc_values": false 	
					}
	            }
            }
        ]
    }
}
