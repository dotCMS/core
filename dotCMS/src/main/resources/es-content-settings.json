{
	"analysis": {
		"analyzer": {
			"dot_comma_analyzer": {
				"type": "pattern",
				"pattern":",,"
			},
			"default" : {
				"type" : "whitespace"
			},
			"my_analyzer": {
				"tokenizer": "standard",
				"char_filter": [
					"my_char_filter"
				]
			}
		},

		"char_filter": {
			"my_char_filter": {
				"type": "pattern_replace",
				"pattern": "([0-9a-f]{8})-([0-9a-f]{4})-([0-9a-f]{4})-([0-9a-f]{4})-([0-9a-f]{12})",
				"replacement": "$1_$2_$3_$4_$5"
			}
		}

	},

    "index.mapping.total_fields.limit" : "10000",

    "index.mapping.nested_fields.limit" : "10000"
}
