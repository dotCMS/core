<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Filters and Filter-Mappings have been moved to programmatic configuration: -->
    <!-- - Filter Registration and Ordering: See FilterRegistration.java (maintains exact order) -->
    <!-- - @WebListener: FilterRegistration class handles all filter registration and ordering -->
    <!-- - Order preserved: NormalizationFilter → HttpHeaderSecurityFilter → CookiesFilter → HealthCheckFilter → etc. -->
    <!-- See com.dotcms.filters.FilterRegistration for complete filter chain configuration -->

    <!-- Welcome Files -->
    <!-- Note: Welcome files cannot be configured programmatically in Servlet API -->
    <!-- They must remain in web.xml as there is no equivalent programmatic configuration -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- Other configurations have been moved to programmatic configuration: -->
    <!-- - Context Parameters: See WebAppConfig.configureContextParams() -->
    <!-- - JSP Properties: See WebAppConfig.configureJspProperties() -->
    <!-- - Error Pages: See WebConfig.contextInitialized() -->
    <!-- - MIME Mappings: See WebConfig.contextInitialized() -->
    <!-- - Security Constraints: See WebAppInitializer.configureSecurityConstraints() -->

    <!-- Servlets and Filters have been moved to programmatic/annotation configuration: -->
    <!-- - @WebServlet: All servlets now use this annotation for URL mapping and loadOnStartup -->
    <!-- - Filter Registration: See FilterRegistration.java for programmatic filter ordering -->
    <!-- - @WebListener: Used for FilterRegistration and other listener registration -->
    <!-- See individual servlet classes and FilterRegistration.java for configurations -->

</web-app>
