		</init-param>
		<init-param>
			<param-name>detail</param-name>
			<param-value>0</param-value>
		</init-param>
		<init-param>
			<param-name>stxxInit</param-name>
			<param-value>/stxx.properties</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>
    <servlet>
