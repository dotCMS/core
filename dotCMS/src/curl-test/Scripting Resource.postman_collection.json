				{
					"name": "fire-script",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);    ",
									"    const $ = cheerio.load(pm.response.text());    ",
									"    pm.expect($(\"#ct\").text()).to.eql(\"image/jpeg\");",
									"    pm.expect($(\"#modDate\").text()).to.be.above(0);",
									"    pm.expect($(\"#fileSize\").text()).to.be.above(349837);",
									"    pm.expect($(\"#isImage\").text()).to.be.eql(true);",
									"    pm.expect($(\"#width\").text()).to.be.eql(1500);",
									"    pm.expect($(\"#height\").text()).to.be.eql(1500);",
									"    pm.expect($(\"#sha256\").text()).to.be.eql(\"6f0973971520c46b0e4d2cad8e8ef6d856a49b9e91833c1867ff68ca024daacc\");",
									"    pm.expect($(\"#title\").text()).to.be.eql(\"fear.jpg\");",
									"    pm.expect($(\"#path\").text()).not.equal(null);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
