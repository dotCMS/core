	"item": [
		{
			"name": "Create new Site",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code should be 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"var jsonData = pm.response.json();",
							"",
							"pm.test(\"Host check\", function () {",
							"    pm.expect(jsonData.entity.siteName).to.eql('templateSpecific.host.com');",
							"});",
							"",
							"pm.collectionVariables.set(\"siteId\", jsonData.entity.identifier);",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "basic",
					"basic": [
						{
							"key": "password",
							"value": "admin",
							"type": "string"
						},
						{
							"key": "username",
							"value": "admin@dotcms.com",
							"type": "string"
						}
					]
				},
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"siteName\":\"templateSpecific.host.com\"\n\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{serverURL}}/api/v1/site",
					"host": [
						"{{serverURL}}"
					],
					"path": [
						"api",
						"v1",
						"site"
					]
				}
			},
			"response": []
		},
		{
			"name": "Create New Template Success",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code should be ok 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"var jsonData = pm.response.json();",
							"",
							"pm.test(\"body check\", function () {",
							"    pm.expect(jsonData.entity.body).to.eql('This is the body');",
							"});",
							"",
							"pm.test(\"friendlyName check\", function () {",
							"    pm.expect(jsonData.entity.friendlyName).to.eql('This is a postman test description');",
							"});",
							"",
							"pm.test(\"Title check\", function () {",
							"    pm.expect(jsonData.entity.title).to.eql('Template Specific Host');",
							"});",
							"",
							"pm.collectionVariables.set(\"templateId\", jsonData.entity.identifier);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "basic",
					"basic": [
						{
							"key": "password",
							"value": "admin",
							"type": "string"
						},
						{
							"key": "username",
							"value": "admin@dotcms.com",
							"type": "string"
						},
						{
							"key": "saveHelperData",
							"type": "any"
						},
						{
							"key": "showPassword",
							"value": false,
							"type": "boolean"
						}
					]
				},
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"siteId\":\"{{siteId}}\",\n    \"title\":\"Template Specific Host\",\n    \"friendlyName\":\"This is a postman test description\",\n    \"body\":\"This is the body\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{serverURL}}/api/v1/templates",
					"host": [
						"{{serverURL}}"
					],
					"path": [
						"api",
						"v1",
						"templates"
					]
				}
			},
			"response": []
		},
		{
			"name": "List template by host",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code should be ok 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"var jsonData = pm.response.json();",
							"var templateId = pm.collectionVariables.get(\"templateId\");",
							"",
							"pm.test(\"Id check\", function () {",
							"    pm.expect(jsonData.entity[0].identifier).to.eql(templateId);",
							"});",
							"",
							"pm.test(\"Length check\", function () {",
							"    pm.expect(jsonData.entity.length).to.eql(1);",
							"});",
							"",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "basic",
					"basic": [
						{
							"key": "password",
							"value": "admin",
							"type": "string"
						},
						{
							"key": "username",
							"value": "admin@dotcms.com",
							"type": "string"
						}
					]
				},
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{serverURL}}/api/v1/templates?host={{siteId}}",
					"host": [
						"{{serverURL}}"
					],
					"path": [
						"api",
						"v1",
						"templates"
					],
					"query": [
						{
							"key": "host",
							"value": "{{siteId}}"
						}
					]
				}
			},
			"response": []
		}
