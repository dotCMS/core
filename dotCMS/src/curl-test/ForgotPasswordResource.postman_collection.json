	"item": [
		{
			"name": "ForgotPassword Email Not Valid BadRequest",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Email Not Valid\", function () {",
							"    pm.response.to.have.status(400);",
							"});",
							"",
							"// Negative Test: Rate Limiting",
							"pm.test(\"Rate Limiting\", function () {",
							"    pm.response.to.have.status(429);",
							"});",
							"",
							"// Negative Test: Cross-Site Request Forgery (CSRF)",
							"pm.test(\"CSRF\", function () {",
							"    pm.response.to.have.status(403);",
							"});",
							"",
							"// XSS detection test using regular expressions",
							"pm.test(\"Body does not contain potential XSS patterns\", function () {",
							"    const responseBody = pm.response.text();",
							"",
							"    // Common XSS patterns in regular expressions",
							"    const xssPatterns = [",
							"        /<script\\b[^<]*(?:(?!<\\/script>)<[^<]*)*<\\/script>/gi,",
							"        /on\\w+=\"[^\"]*\"/gi,",
							"        // Add more patterns as needed",
							"    ];",
							"",
							"    xssPatterns.forEach(function (pattern) {",
							"        pm.expect(responseBody).to.not.match(pattern);",
							"    });",
							"});",
							"",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"userId\":\"admin\"\n}",
					"options": {
