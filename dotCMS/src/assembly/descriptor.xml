<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>zip</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
       <!-- <format>tar.gz</format>-->
    </formats>
    <dependencySets>
        <dependencySet>
                <useProjectArtifact>false</useProjectArtifact>
                <includes>
                    <include>org.glowroot:glowroot-agent:zip:*</include>
                </includes>
                <useTransitiveFiltering>true</useTransitiveFiltering>
                <outputDirectory>bin</outputDirectory>
                <unpack>true</unpack>
                <scope>provided</scope>
        </dependencySet>
    </dependencySets>
    <fileSets>

        <fileSet>
            <directory>${bin-directory}</directory>
            <outputDirectory>bin</outputDirectory>
            <excludes>
                <exclude>build.conf</exclude>
                <exclude>*.sh</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${bin-directory}</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${assembly-directory}</directory>
            <outputDirectory></outputDirectory>
            <excludes>
                <exclude>**/*.sh</exclude>
                <exclude>**/webapps/host-manager/**</exclude>
                <exclude>**/webapps/manager/**</exclude>
                <exclude>**/felix-cache/**</exclude>
                <exclude>**/webapps/cargorpc/**</exclude>
                <exclude>**/work/**</exclude>
                <exclude>**/temp/**</exclude>
                <exclude>**/logs/**</exclude>
                <exclude>**/lib/**</exclude>
                <exclude>**/shared/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${assembly-directory}</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>**/*.sh</include>
            </includes>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${docs-directory}</directory>
            <outputDirectory>docs</outputDirectory>
        </fileSet>
    </fileSets>
