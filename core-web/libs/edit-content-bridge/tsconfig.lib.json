{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "declaration": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "target": "ES2015",
        "lib": ["es2020", "dom"],
        "types": ["node", "vite/client"],
        "skipLibCheck": true,
        "noPropertyAccessFromIndexSignature": false,
        "downlevelIteration": true,
        "strictPropertyInitialization": false
    },
    "include": ["src/**/*.ts"],
    "exclude": [
        "**/*.spec.ts",
        "**/*.test.ts",
        "**/jest.config.ts",
        "**/*.stories.ts",
        "**/*.stories.js"
    ]
}
