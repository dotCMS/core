{
    "extends": ["plugin:@nrwl/nx/react", "../../../.eslintrc.base.json"],
    "ignorePatterns": ["!**/*"],
    "parserOptions": {
        "sourceType": "module"
    },
    "overrides": [
        {
            "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
            "rules": {}
        },
        {
            "files": ["*.ts", "*.tsx"],
            "rules": {}
        },
        {
            "files": ["*.js", "*.jsx"],
            "rules": {}
        },
        {
            "files": [
                "**/*.spec.ts",
                "**/*.spec.tsx",
                "**/*.test.ts",
                "**/*.test.tsx",
                "**/*.spec.js",
                "**/*.test.js"
            ],
            "rules": {
                // Allow any type in test files
                "@typescript-eslint/no-explicit-any": "off"
            }
        }
    ]
}
