{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../../dist/out-tsc",
        "declaration": true,
        "declarationMap": true,
        "inlineSources": true,
        "types": []
    },
    "exclude": [
        "src/**/*.spec.ts",
        "src/test-setup.ts",
        "jest.config.ts",
        "src/**/*.test.ts",
        "next/test-setup.ts",
        "next/**/*.spec.ts",
        "next/**/*.test.ts"
    ],
    "include": ["src/**/*.ts", "next/**/*.ts"]
}
