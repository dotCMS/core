{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "ES2015",
        "target": "es2015",
        "declaration": true,
        "outDir": "../../../dist/out-tsc",
        "types": ["node", "jest"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
