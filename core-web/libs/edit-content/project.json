{
    "name": "edit-content",
    "$schema": "../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "sourceRoot": "libs/edit-content/src",
    "prefix": "dotcms",
    "targets": {
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "libs/edit-content/jest.config.ts",
                "verbose": false
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"]
        },
        "e2e": {
            "executor": "@nx/playwright:playwright",
            "outputs": ["{workspaceRoot}/playwright/{projectRoot}"],
            "options": {
                "config": "libs/edit-content/playwright.config.ts",
                "ui": false,
                "skipInstall": true,
                "output": "dist/libs/edit-content"
            }
        }
    },
    "tags": ["type:feature", "scope:dotcms-ui", "portlet:edit-content"]
}
