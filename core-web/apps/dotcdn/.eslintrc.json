{
    "extends": ["../../.eslintrc.base.json"],
    "ignorePatterns": ["!**/*"],
    "overrides": [
        {
            "files": ["*.ts"],
            "extends": [
                "plugin:@nx/angular",
                "plugin:@angular-eslint/template/process-inline-templates"
            ],
            "rules": {
                "@angular-eslint/directive-selector": [
                    "error",
                    {
                        "type": "attribute",
                        "prefix": "dotcms",
                        "style": "camelCase"
                    }
                ],
                "@angular-eslint/component-selector": [
                    "error",
                    {
                        "type": "element",
                        "prefix": "dotcms",
                        "style": "kebab-case"
                    }
                ],
                "@nx/enforce-module-boundaries": [
                    "error",
                    {
                        "allowCircularSelfDependency": true,
                        "enforceBuildableLibDependency": true,
                        "allow": [
                            "@components/_common/dot-alert-confirm/dot-alert-confirm.module",
                            "@components/_common/dot-push-publish-dialog",
                            "@components/dot-large-message-display/dot-large-message-display.module",
                            "@components/dot-message-display/dot-message-display.module"
                        ],
                        "depConstraints": [
                            {
                                "sourceTag": "*",
                                "onlyDependOnLibsWithTags": ["*"]
                            }
                        ]
                    }
                ]
            }
        },
        {
            "files": ["*.html"],
            "extends": ["plugin:@nx/angular-template"],
            "rules": {}
        }
    ]
}
