{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "types": [],
        "target": "ES2022",
        "useDefineForClassFields": false,
        "module": "es2022",
        "moduleResolution": "bundler",
        "resolvePackageJsonExports": true,
        "incremental": true,
        "esModuleInterop": true
    },
    "files": ["src/main.ts", "src/polyfills.ts"],
    "exclude": ["**/*.stories.ts", "**/*.stories.js"]
}
