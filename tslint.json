{
    "extends": ["tslint-angular"],
    "rules": {
        "no-output-on-prefix": [false],
        "cyclomatic-complexity": [true, 3],
        "deprecation": {
            "severity": "warning"
        },
        "directive-selector": [true, "attribute", "dot", "camelCase"],
        "component-selector": [true, "element", "dot", "kebab-case"],
        "max-classes-per-file": false,
        "use-component-view-encapsulation": false,
        "whitespace": [true, "check-branch", "check-operator", "check-separator", "check-type"],
        "quotemark": [true, "single", "jsx-double"],
        "member-ordering": [
            true,
            {
                "order": [
                    "public-static-field",
                    "protected-static-field",
                    "private-static-field",
                    "public-instance-field",
                    "protected-instance-field",
                    "private-instance-field",
                    "constructor",
                    "public-static-method",
                    "protected-static-method",
                    "private-static-method",
                    "public-instance-method",
                    "protected-instance-method",
                    "private-instance-method"
                ]
            }
        ]
    }
}
