							"mode": "raw",
							"raw": "{\n    \"portletId\": \"{{portletId}}\",\n    \"portletName\": \"myCustom\",\n    \"baseTypes\": \"CONTENT\",\n    \"contentTypes\": \"\",\n    \"dataViewMode\": \"card\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
