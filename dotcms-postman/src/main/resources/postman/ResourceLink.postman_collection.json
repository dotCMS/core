	"item": [
		{
			"name": "Create Temp File",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "8924c522-65d4-4ce6-b488-da84f8d08e4f",
						"exec": [
							"var jsonData = pm.response.json();",
							"",
							"pm.test(\"File name check\", function () {",
							"    pm.expect(jsonData.tempFiles[0].fileName).to.eql('250px-Bocas2.jpg');",
							"});",
							"pm.collectionVariables.set(\"temporalFileId\", jsonData.tempFiles[0].id);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "basic",
					"basic": [
						{
							"key": "password",
							"value": "admin",
							"type": "string"
						},
						{
							"key": "username",
							"value": "admin@dotcms.com",
							"type": "string"
						}
					]
				},
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"name": "Content-Type",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "referer",
						"value": "localhost",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n\t\"fileName\":\"250px-Bocas2.jpg\",\n\t\"remoteUrl\": \"https://dotcms-storage.b-cdn.net/Bocas2.jpg\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{serverURL}}/api/v1/temp/byUrl",
					"host": [
						"{{serverURL}}"
					],
					"path": [
						"api",
						"v1",
						"temp",
						"byUrl"
					]
				}
			},
			"response": []
		},
